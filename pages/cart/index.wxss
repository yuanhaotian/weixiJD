/* pages/cart/index.wxss */
page{
  position:relative;
}
#showShop{
  display:flex;
  height:210rpx;
  padding:0 10rpx;
  margin-bottom:20rpx;
}
#showShop .lSelect{
  flex:1 1;
  height:100%;
}
#showShop .lSelect .circle{
  width:40rpx;
  height:40rpx;
  margin:82rpx auto 0;
  border-radius:50%;
  border:4rpx solid grey;
}
#showShop .lSelect .selected{
  background-color:rgb(47, 255, 92);
}
#showShop .rdes{
  flex:5 5;
  height:100%;
  border:1rpx solid rgb(238, 233, 233);
  border-top:0rpx;
}
#showShop .rdes .desImg{
  float:left;
  width: 136rpx;
  height:170rpx;
  margin:30rpx 0 0 30rpx;
}
#showShop .rdes .textBox{
  float:left;
  width:435rpx;
  margin: 30rpx 0;
  font-size:26rpx;
}
#showShop .rdes .textBox .text{
  overflow:hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height:35rpx;
  width:100%;
  height:70rpx;
}
#showShop .rdes .textBox .priceCount{
  width:100%;
  height:60rpx;
  margin-top:10rpx;
}
#showShop .rdes .textBox  .price{
  float:left;
  color:rgb(190, 15, 15);
  line-height:60rpx;
}
#showShop .rdes .textBox  .amount{
  float:left;
  margin-left:30rpx;
}
#pay{
  position:fixed;
  bottom:0;
  display:flex;
  width:100%;
  height:90rpx;
  border-top:2rpx solid rgb(187, 184, 184);
}
#pay .circleBox{
  flex:2 2 ;
}
#pay .circleBox .circle{
  float:left;
  width:40rpx;
  height:40rpx;
  border-radius:50%;
  border:4rpx solid grey;
  margin:23rpx 10rpx 0 35rpx;
}
/*全选圈*/
#pay .circleBox .allSelected{
  background-color:rgb(47, 255, 92);
}
#pay .circleBox .allSelect{
  font-size:32rpx;
  color:grey;
  line-height:90rpx;
}
#pay .cost{
  flex:3  3;
  font-size:32rpx;
  color:grey;
  line-height:90rpx;
  text-align: center;
}
#pay .cost .addAll{
  color:rgb(228, 9, 9);
}
#pay .goToPay{
  flex:3 3;
  color:#fff;
  text-align:center;
  line-height:90rpx;
  background-color:rgb(236, 17, 17);
}