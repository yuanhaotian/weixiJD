/* pages/home/index.wxss */
#page{
  background-color:#fbf9fe;
}
/* header start */
#header{
  display:flex;
  justify-content: center;
  align-items:center;
  height:60rpx;
  padding: 0 10rpx;
}
#header .icon{
  flex: 1 1 ;
  height: 100%;
}
#header .icon image{
  display:block;
  width:45rpx;
  padding-top:8rpx;
  margin:0 auto;
}
#header .inputBox{
  flex:8 8;
  height:100%;
  background-color:#fff;
}
#header .inputBox image{
  float:left;
  width:45rpx;
  padding-top:8rpx;
  margin-left:12rpx;
}
#header .inputBox .inputs{
  float:left;
  width:510rpx;
  height:60rpx;
  margin-left:8rpx;
  color:grey;
  font-size:30rpx;
}
/* header end */
/* banner start */
#banner{
  height:300rpx;
  padding-top:10rpx;
}
#banner .images{
  display:block;
  width:750rpx;
  height:324rpx;
  margin:0 auto;
}
/* banner end */
/* sIcon start */
#sIcon{
  overflow:hidden;
  padding:10rpx 10rpx 0;
}
#sIcon .iconBox{
  float:left;
  width:146rpx;
  height:150rpx;
  padding-bottom:10rpx;
}
#sIcon .iconBox image{
  display:block;
  width:110rpx;
  /* height:116rpx; */
  margin:0 auto;
}
#sIcon .iconBox text{
  display:block;
  text-align:center;
  font-size:26rpx;
  line-height:30rpx;
  color:grey;
}
/* sIcon end */
/* swiper start */
#swiper{
  height:300rpx;
  padding:20rpx 20rpx 0rpx;
}
#swiper .title{
  height:80rpx;
  font-size:26rpx;
}
#swiper .title image{
  float:left;
  width:160rpx;
  margin-top:22rpx;
}
#swiper .title .more{
  float:right;
  margin-top:20rpx;
  color:grey;
  font-size:30rpx;
}
#swiper .scroll{
  width:100%;
  height:220rpx;
  white-space: nowrap;
}
#swiper .scroll .content{
  display:inline-block;
  width:200rpx;
  height:100%;
  margin-right:20rpx;
}
#swiper .scroll  image{
  display:block;
  width:180rpx;
  height:180rpx;
  margin:0 10rpx;
}
#swiper .scroll .price{
  font-size:26rpx;
  color:grey;
  text-align:center;
}
/* swiper end */
/* imgBox start */
#imgBox{
  margin-top:10rpx;
}
#imgBox .imgRow{
  display:flex;
  height:292rpx;
}
#imgBox .imgRow image{
   height:100%;
}
/* imgBox end */