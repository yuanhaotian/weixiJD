/* component/IOU/iou.wxss */
.iouBox{
  position:fixed;
  bottom:0;
  z-index:100;
  width:100%;
  height:100%;
  background:rgba(0,0,0,.4);
}
.iou{
  position:absolute;
  bottom:0;
  width:100%;
  padding:20rpx 0;
  background-color:#fff;
}
.iou .title{
  height:90rpx;
  background-color:#fbf9fe;
  padding:0 20rpx;
  line-height:90rpx;
  text-align:center;
}
.iou .title .closePng{
  float:right;
  width:40rpx;
  height:40rpx;
  margin-top:28rpx;
}
.iou .iouDes{
  display:flex;
  height:80rpx;
  padding:0 20rpx;
  line-height:80rpx;
  margin:10rpx 0;
  /* text-align:center; */
}
.iou .iouDes .circle{
  flex:1 1;
  height:100%;
}
.iou .iouDes .text{
  flex:5 5;
  height:100%;
  /* background-color:grey */
}
.iou .iouDes .circle .box{
  width:45rpx;
  height:45rpx;
  border:2px solid grey;
  border-radius:50%;
  background-color:#fff;
  margin:20rpx auto 0;
}
.iou .iouDes .circle .img{
  display: block;
  width:45rpx;
  height:45rpx;
  border-radius:50%;
}
.iou .iouDes .text .textDes{
  height:40rpx;
  font-size:30rpx;
  line-height:40rpx;
}
.iou .btn{
  height:80rpx;
  margin-top:30rpx;
  background-color:#ee2b2f;
  color:#fff;
  font-size:34rpx;
  text-align:center;
  line-height:80rpx;
}